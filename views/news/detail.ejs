<%- include('../partials/header.ejs') %>

<main class="container">
    <div style="max-width: 800px; margin: 0 auto; width: 100%;">
        
        <a href="/financials/news" class="reg-button" style="display:inline-block; margin-bottom: 20px;">
            &larr; Back to Feed
        </a>

        <h1><%= article.title %></h1>
        <p class="text-muted"><strong>Source:</strong> <%= article.source %></p>

        <% if (article.image) { %>
            <img src="<%= article.image %>" style="width: 100%; border-radius: 12px; margin: 20px 0; max-height: 400px; object-fit: cover;" alt="News Image">
        <% } %>

        <div class="article-content" style="line-height: 1.8; font-size: 1.1rem; color: #333;">
            <p><%= article.content %></p>
        </div>

        <div style="background: #f8f9fa; padding: 25px; border-radius: 12px; margin-top: 40px; text-align: center;">
            <p>Read the full story at the original source:</p>
            <a href="<%= article.url %>" target="_blank" class="reg-button">Visit Original Article</a>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>